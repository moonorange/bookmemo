<div class="col-md-6 col-md-offset-3">

  <div class="new-edit-form">

		<h1>本の編集</h1>

		<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
		　<%= f.select :category_id, @categories %>
			<%= f.file_field :book_img %>
			<%= f.input :title ,label: "タイトル" %>
			<%= f.input :description ,label: "内容" %>
			<%= f.input :author ,label: "著者" %>
			<%= f.button :submit, "本の追加" %>
		<% end %>

	</div>

</div>

<h2><%= @book.title %></h2>
<h3><%= @book.author %></h3>
<h4>カテゴリー: <%= @book.category.name %></h4>
<p><%= @book.description %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
  <% if @book.id == current_user.id %>

    <%= link_to "Edit", edit_book_path(@book)%>
    <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "本当に削除してよろしいですか?" }%>
  <% end %>

<% end %>
